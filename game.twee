:: MyScript [script]
function initStars() {
  var containers = document.querySelectorAll('.starfield');
  containers.forEach(function(container) {
    if (container.dataset.initialized) return;
    container.dataset.initialized = true;
    var stars = container.querySelectorAll('.star');
    stars.forEach(function(star) {
      var duration = (Math.random() * 3 + 1).toFixed(1);
      var delay = (Math.random() * 3).toFixed(1);
      star.style.animationDuration = duration + 's';
      star.style.animationDelay = delay + 's';
      star.style.display = 'inline';
    });
  });
}

$(document).on('tw:passageend', initStars);
$(document).on('tw:passagestart', initStars);
setTimeout(initStars, 100);
setTimeout(initStars, 500);
setTimeout(initStars, 1000);

